@model DateTime?
<input id="@Html.IdForModel()" name="@Html.NameForModel()" value="@(Model > DateTime.MinValue || Model.HasValue ? Model.Value.ToString("yyyy-MM-dd") : null)" />
<script>
    $(document).ready(function () {
        $("#@Html.IdForModel()").kendoDatePicker({ format: "yyyy-MM-dd" });
    });
</script>